// Momentum - Habit Tracker PWA
// Database schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String?
  goalWeight    Float?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  habits        Habit[]
  weightLogs    WeightLog[]
  badges        UserBadge[]
  guidances     UserGuidance[]
}

model Habit {
  id                    String    @id @default(cuid())
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  name                  String
  description           String?
  icon                  String    @default("ðŸŽ¯")
  color                 String    @default("#d97706")

  // Credits earned from milestones
  currentCredits        Int       @default(0)

  // Streak tracking
  currentStreak         Int       @default(0)
  longestStreak         Int       @default(0)
  lastCompletedAt       DateTime?

  // Scheduling
  frequency             String    @default("daily")
  targetDays            String?

  isArchived            Boolean   @default(false)
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  completions           HabitCompletion[]
  diorama               Diorama?
  gardenSnapshots       GardenSnapshot[]

  @@index([userId])
}

// Living Diorama - 3D visualization of habit streaks
model Diorama {
  id                 String   @id @default(cuid())
  habitId            String   @unique
  habit              Habit    @relation(fields: [habitId], references: [id], onDelete: Cascade)

  // Plant state (0-7: seed â†’ mythic)
  plantStage         Int      @default(0)
  plantVariant       String   @default("default")
  growthProgress     Float    @default(0)  // 0-1 progress within current stage

  // World state (0-4: barren â†’ paradise)
  worldTier          Int      @default(0)
  lightingMode       String   @default("day")  // day, golden, twilight, night, winter

  // Visual accumulation
  accumulatedProps   Json     @default("[]")
  particleConfig     Json     @default("{}")

  // Milestone tracking
  unlockedMilestones Int[]    @default([])

  // Reset state
  isInResetMode      Boolean  @default(false)

  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

// Snapshots of past garden states (for Garden History)
model GardenSnapshot {
  id             String   @id @default(cuid())
  habitId        String
  habit          Habit    @relation(fields: [habitId], references: [id], onDelete: Cascade)

  streakLength   Int
  plantStage     Int
  worldTier      Int
  dioramaState   Json     // Full serialized state for recreation

  achievedAt     DateTime @default(now())
  endReason      String?  // "streak_break", "habit_deleted", etc.

  @@index([habitId])
}

model HabitCompletion {
  id        String   @id @default(cuid())
  habitId   String
  habit     Habit    @relation(fields: [habitId], references: [id], onDelete: Cascade)

  date      DateTime @db.Date
  skipped   Boolean  @default(false)
  notes     String?

  createdAt DateTime @default(now())

  @@unique([habitId, date])
  @@index([habitId])
  @@index([date])
}

model WeightLog {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  weight    Float
  unit      String   @default("kg")
  date      DateTime @db.Date
  notes     String?

  createdAt DateTime @default(now())

  @@unique([userId, date])
  @@index([userId])
}

model Badge {
  id          String      @id @default(cuid())
  name        String
  description String
  icon        String
  condition   Json

  users       UserBadge[]
}

model UserBadge {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  badgeId   String
  badge     Badge    @relation(fields: [badgeId], references: [id], onDelete: Cascade)

  earnedAt  DateTime @default(now())

  @@unique([userId, badgeId])
  @@index([userId])
}

// User guidance pop-ups - tracks what has been shown
model UserGuidance {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  guidanceKey  String   // e.g., "first_habit", "streak_7", "garden_discovery"
  shownAt      DateTime @default(now())

  @@unique([userId, guidanceKey])
  @@index([userId])
}
